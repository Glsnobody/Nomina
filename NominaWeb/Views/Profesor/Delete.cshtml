@model Profesor

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Eliminar Profesor</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Codigo">Codigo</label>
            <input asp-for="Id" class="form-control" min="1" disabled/>
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" disabled/>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Apellido">Apellido</label>
            <input asp-for="Apellido" class="form-control" disabled/>
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PrecioHora">Precio por hora</label>
            <input asp-for="PrecioHora" class="form-control" min="1" disabled/>
            <span asp-validation-for="PrecioHora" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Eliminar</button>
        <a asp-controller="Profesor" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Volver al Listado
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}